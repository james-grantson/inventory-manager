datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id        String   @id @default(uuid())
  name      String
  category  String
  price     Float
  cost      Float
  quantity  Int
  lowStockThreshold Int @default(10)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
