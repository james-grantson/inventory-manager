"use client"

import { useState, useEffect } from 'react'
import { useRouter } from 'next/navigation'

export default function LoginPage() {
  const router = useRouter()
  const [email, setEmail] = useState('')
  const [password, setPassword] = useState('')
  const [loading, setLoading] = useState(false)
  const [error, setError] = useState('')
  const [isClient, setIsClient] = useState(false)

  // Only run on client side
  useEffect(() => {
    setIsClient(true)
  }, [])

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault()
    setLoading(true)
    setError('')

    try {
      // Check if we're on Vercel (only on client)
      const isProduction = typeof window !== "undefined" && window.location.hostname.includes("vercel.app")
      if (isClient) {
      const isProduction = typeof window !== "undefined" && window.location.hostname.includes("vercel.app")
          window.location.hostname.includes('vercel.app') ||
          (process.env.NEXT_PUBLIC_SUPABASE_URL && 
           !process.env.NEXT_PUBLIC_SUPABASE_URL.includes('placeholder'))
      }

      if (!isProduction) {
        // Local development
        setTimeout(() => {
          setError('🔧 On Vercel deployment, this will login with Supabase')
          setLoading(false)
        }, 1000)
        return
      }

      // Production - call Supabase
      const supabaseUrl = process.env.NEXT_PUBLIC_SUPABASE_URL
      const supabaseKey = process.env.NEXT_PUBLIC_SUPABASE_ANON_KEY

      if (!supabaseUrl || !supabaseKey) {
        setError('Supabase configuration missing')
        setLoading(false)
        return
      }

      // Call Supabase auth API
      const response = await fetch(`${supabaseUrl}/auth/v1/token?grant_type=password`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'apikey': supabaseKey,
          'Authorization': `Bearer ${supabaseKey}`
        },
        body: JSON.stringify({ email, password })
      })

      const result = await response.json()

      if (response.ok) {
        // Store the session
        localStorage.setItem('supabase.auth.token', JSON.stringify(result))
        if (result.user) {
          localStorage.setItem('supabase.auth.user', JSON.stringify(result.user))
        }
        
        // Redirect to home
        router.push('/')
        router.refresh()
      } else {
        setError(result.error_description || result.error || 'Login failed')
      }
    } catch (err: any) {
      setError('Network error: ' + (err.message || 'Please check console'))
      console.error('Login error:', err)
    } finally {
      setLoading(false)
    }
  }

  return (
    <div className="min-h-screen flex items-center justify-center p-4">
      <div className="max-w-md w-full">
        <div className="bg-white rounded-lg shadow p-6">
          <h2 className="text-2xl font-bold mb-6 text-center">Login</h2>
          
          <form onSubmit={handleSubmit} className="space-y-4">
            <div>
              <label className="block mb-2">Email</label>
              <input
                type="email"
                value={email}
                onChange={(e) => setEmail(e.target.value)}
                className="w-full p-2 border rounded"
                placeholder="email@example.com"
                required
                disabled={loading}
              />
            </div>
            
            <div>
              <label className="block mb-2">Password</label>
              <input
                type="password"
                value={password}
                onChange={(e) => setPassword(e.target.value)}
                className="w-full p-2 border rounded"
                placeholder=""
                required
                disabled={loading}
              />
            </div>
            
            {error && (
              <div className="bg-red-50 border border-red-200 text-red-700 p-3 rounded text-sm">
                <p className="font-medium"> {error}</p>
                {error.includes('Supabase') && (
                  <p className="text-xs mt-1">Check browser console (F12) for details</p>
                )}
              </div>
            )}
            
            <button
              type="submit"
              disabled={loading}
              className="w-full py-2 bg-blue-600 text-white rounded hover:bg-blue-700 disabled:opacity-50 font-medium"
            >
              {loading ? (
                <span className="flex items-center justify-center">
                  <svg className="animate-spin -ml-1 mr-2 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
                    <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4"></circle>
                    <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  Signing in...
                </span>
              ) : 'Sign In'}
            </button>
          </form>
          
          <div className="mt-6 text-center">
            <p className="text-sm text-gray-600 mb-4">
              Don't have an account?{' '}
              <button
                onClick={() => router.push("/signup")}
                className="text-blue-600 hover:underline font-medium"
              >
                Sign up here
              </button>
            </p>
            <button
              onClick={() => router.push('/')}
              className="text-blue-600 hover:underline text-sm"
            >
               Back to Home
            </button>
          </div>
        </div>
      </div>
    </div>
  )
}
